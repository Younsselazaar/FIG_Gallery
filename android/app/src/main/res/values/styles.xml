<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- =====================================================
         FIG Gallery Base Theme
         ===================================================== -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- System UI -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Disable action bar (React Native controls UI) -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Prevent resize / multi-window behavior -->
        <item name="android:resizeableActivity">false</item>

        <!-- Keep layout stable when keyboard appears -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- =====================================================
         Splash Theme (minimal, fast boot)
         ===================================================== -->

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>
